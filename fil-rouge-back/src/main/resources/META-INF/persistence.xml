<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="it_training">
        <description>IT Training</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.filrougeback.entities.Campus</class>
        <class>com.example.filrougeback.entities.Category</class>
        <class>com.example.filrougeback.entities.Classroom</class>
        <class>com.example.filrougeback.entities.Course</class>
        <class>com.example.filrougeback.entities.Manager</class>
        <class>com.example.filrougeback.entities.Review</class>
        <class>com.example.filrougeback.entities.Session</class>
        <class>com.example.filrougeback.entities.Student</class>
        <class>com.example.filrougeback.entities.Teacher</class>
        <class>com.example.filrougeback.entities.TeacherBusyDates</class>
        <class>com.example.filrougeback.entities.User</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/it_training"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>

    </persistence-unit>

</persistence>